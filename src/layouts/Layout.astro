---
import AnimatedDots from "@/components/AnimatedDots.astro";
import Blur from "@/components/Blur.astro";
import CursorBlob from "@/components/CursorBlob.astro";
import { cn } from "@/lib/utils";
import "@/styles/global.css";

interface Props {
  title: string;
  class?: string;
}

const { title, class: className } = Astro.props;

// Get the current site URL directly from the request
const siteUrl = `${Astro.url.protocol}//${Astro.url.host}`;
const currentUrl = Astro.url.toString();
const ogImageUrl = `${siteUrl}/images/og.png`;
---

<!doctype html>
<html lang="en" class="scroll-smooth bg-background text-primary">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Mohd Zaid's portfolio â€“ a handcrafted digital playground showcasing projects, experience, and creative experiments. Built with Astro & Tailwind CSS, deployed to Cloudflare Workers."
    />
    <meta name="author" content="Mohd Zaid" />
    <meta
      name="keywords"
      content="portfolio, zaid, web developer, astro, tailwind, cloudflare, projects, resume, creative"
    />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Explore Mohd Zaid's portfolio: projects, experience, and creative work. Inspired by Brittany Chang, Paco Coursey, and Anthony Fu."
    />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Mohd Zaid's Portfolio" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="twitter:creator" content="@coder_zaid786" />
    <meta property="twitter:site" content="@coder_zaid786" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content="Explore Mohd Zaid's portfolio: projects, experience, and creative work. Inspired by Brittany Chang, Paco Coursey, and Anthony Fu."
    />
    <meta name="twitter:image" content={ogImageUrl} />
    <meta name="msapplication-TileColor" content="#0f172a" />
    <meta name="theme-color" content="#0f172a" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="antialiased font-sans">
    <div class="group/spotlight relative">
      <CursorBlob />
      <Blur />
      <div class={cn("max-w-3xl mx-auto px-6 py-12 md:py-20", className)}>
        <slot />
      </div>
      <AnimatedDots />
    </div>
  </body>
</html>
